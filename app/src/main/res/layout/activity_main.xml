<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/label_other_0"
        style="@style/BaseCard"
        android:text="Base Animation"
        android:translationZ="0dp"
        android:background="@drawable/card_base"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/label_other_1"
        app:layout_constraintBottom_toTopOf="@id/label_other_2"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/label_other_1"
        style="@style/BaseCard"
        android:text="Base Animation"
        android:background="@drawable/card_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_other_0"
        app:layout_constraintBottom_toTopOf="@id/label_other_3"/>

    <TextView
        android:id="@+id/label_other_2"
        style="@style/BaseCard"
        android:text="Base Animation"
        android:translationZ="0dp"
        android:background="@drawable/card_base"
        app:layout_constraintTop_toBottomOf="@id/label_other_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/label_other_3"
        app:layout_constraintBottom_toTopOf="@id/label_other_4"/>

    <TextView
        android:id="@+id/label_other_3"
        style="@style/BaseCard"
        android:text="Base Animation"
        android:background="@drawable/card_base"
        app:layout_constraintTop_toBottomOf="@id/label_other_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_other_2"
        app:layout_constraintBottom_toTopOf="@id/label_other_5"/>

    <TextView
        android:id="@+id/label_other_4"
        style="@style/BaseCard"
        android:background="@drawable/card_base"
        android:text="Base Animation"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/label_other_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_other_2" />

    <TextView
        android:id="@+id/label_other_5"
        style="@style/BaseCard"
        android:text="Base Animation"
        android:background="@drawable/card_base"
        app:layout_constraintTop_toBottomOf="@id/label_other_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_other_4"
        app:layout_constraintBottom_toBottomOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>